<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colordc"/>
    <LinearLayout
        android:id="@+id/al_bind_zfb"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="支付宝"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>
        <CheckBox
            android:id="@+id/cb_bind_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginRight="10dp"
            android:background="@drawable/cb_tixian_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colordc"/>
    <LinearLayout
        android:id="@+id/al_bind_zfb_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colordc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="支付宝账户"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit_bind_zfb_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/test_cursor"
            android:hint="请输入支付宝账号"
            android:inputType="text|textMultiLine"
            android:singleLine="true"
            android:maxLength="30"
            android:maxLines="1"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:background="@null"
            />
        <TextView
            android:id="@+id/tv_bind_zfb_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="请输入支付宝账号"
            android:inputType="number"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colordc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="真实姓名"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edit_bind_zfb_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入真实姓名"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/test_cursor"
            android:singleLine="true"
            android:maxLength="4"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:gravity="center_vertical|right"
            android:background="@null"
            />

        <TextView
            android:id="@+id/tv_bind_zfb_name"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入支付宝账号"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colordc"/>
    <Button
        android:id="@+id/btn_bind_zfb"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/btn_tixian_bg02"
        android:text="绑定支付宝"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/color6a"/>
</LinearLayout>
</LinearLayout>