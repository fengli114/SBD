<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/iv_order_icon"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/img_default_movie" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titles"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="跳转链接："
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_urles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="www.baidu.com"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="模块排序： "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bumers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_xiugai"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:text="修改"
            android:textColor="#126ef7" />

        <ImageView
            android:id="@+id/iv_delite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@drawable/dingdanxinxi_deletbutton" />
    </LinearLayout>
</LinearLayout>
