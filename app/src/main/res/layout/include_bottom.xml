<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_item_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <!-- 电话 -->
        <LinearLayout
            android:id="@+id/ll_menu_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="clickMenu"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_menu_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/topkey" />

                <ImageView
                    android:id="@+id/iv_menu_home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_menu_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="电话"
                android:textColor="@color/text_home_menu_selected"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 通讯录 -->
        <LinearLayout
            android:id="@+id/ll_menu_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="clickMenu"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_menu_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/tab_1_normal"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_menu_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="通讯录"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="clickMenu"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_menu_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/taoshangcheng" />

            <TextView
                android:id="@+id/tv_menu_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="淘商城"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 商城 -->
        <LinearLayout
            android:id="@+id/ll_menu_talk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="clickMenu"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_menu_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="发现"
                android:src="@drawable/faxian" />

            <TextView
                android:id="@+id/tv_menu_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="发现"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 我的 -->

        <LinearLayout
            android:id="@+id/ll_menu_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="clickMenu"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_menu_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/tab_3_normal" />

            <TextView
                android:id="@+id/tv_menu_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我的"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
