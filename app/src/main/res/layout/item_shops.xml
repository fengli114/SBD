<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="150dp"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_goods_icon"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@mipmap/gray_default"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:id="@+id/tv_goods_discount"
                android:layout_width="113dp"
                android:layout_height="23dp"
                android:layout_marginTop="171dp"
                android:background="@drawable/zhekou_background"
                android:gravity="center"
                android:text="可抵扣50元"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/taoshop_paixialijian"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="【单拍40片送20片同款】暖宝"
            android:textColor="#272727"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/price"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="￥12.5"
                android:textColor="#ff5900"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goods_xl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@drawable/btn_tixian_bg05"
                android:padding="2dp"
                android:text="可兑换30元"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>
        <!--</com.zhy.autolayout.AutoRelativeLayout>-->
    </LinearLayout>
</LinearLayout>
