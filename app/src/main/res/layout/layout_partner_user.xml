<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center">

 
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_partner_icon" 
        android:layout_width="38dp"
        android:layout_height="36dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"/>

    <!--账号信息-->
    <LinearLayout
        android:id="@+id/lin_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_toRightOf="@+id/iv_partner_icon"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号:"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal_16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_partner_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尊敬的合伙人,您好!"
                android:textColor="#343434"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_avatar"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额:"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal_16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_partner_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1846564465"
                android:textColor="#343434"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
