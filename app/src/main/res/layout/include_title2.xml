<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_item_height"
        >
        <RelativeLayout
            android:id="@+id/al_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/login_item_height"
            android:padding="@dimen/dimen_15dp"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="@dimen/login_item_height"
                android:src="@mipmap/re_back" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="搜索结果"
            android:textSize="@dimen/text_size_normal_18sp" />

        <RelativeLayout
            android:id="@+id/al_right"
            android:layout_width="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_height="@dimen/login_item_height"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/taoshop_category_searchicon" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dcdcdc" />
</LinearLayout>