<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mhy.shopingphone.ui.VerificationActivity">
    <ImageView
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="1dp" />

    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/sp_18"
        android:paddingRight="@dimen/dimen_12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_weight="1"
            android:textColor="#282828"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_shoper_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入企业管家账号"
            android:singleLine="true"
            android:maxLength="20"
            android:maxLines="1"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:paddingRight="10dp"
            android:background="@null"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/sp_18"
        android:paddingRight="@dimen/dimen_12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_weight="1"
            android:textColor="#282828"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_shoper_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:maxLength="15"
            android:password="true"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:paddingRight="10dp"
            android:background="@null"
            />
        <RelativeLayout
            android:id="@+id/rl_cb_look"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/cb_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/cb_forget_pwd_selector"
                android:button="@null"/>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_partner_login"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/login_btn_corner"
        android:text="确定"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal_14sp" />
</LinearLayout>
