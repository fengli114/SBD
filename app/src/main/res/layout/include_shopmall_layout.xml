<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner_shopping_mall"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/gray_default" />

    <ImageView
        android:id="@+id/iv_jingdong"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/shop_jingdong_banner01" />

    <RelativeLayout
        android:id="@+id/rl_fenlei"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#aaa"
            android:visibility="gone" />
    </RelativeLayout>
    <!-- <include layout="@layout/shopping_mall_type" />-->
    <!--消息-->
    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:src="@drawable/taoshop_suibiangoutoutiao" />

        <com.mhy.shopingphone.widgets.ScrollTextView
            android:id="@+id/tv_adv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:textColor="@color/red" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/taoshop_rementuijian_icon"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="热门推荐"
        android:textColor="#000"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@drawable/taoshop_youhuigou_icon"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="优惠购"
        android:textColor="#000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_shop_type1"
                android:layout_width="165dp"
                android:layout_height="82dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_shop_type2"
                android:layout_width="165dp"
                android:layout_height="82dp"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_shop_type3"
                android:layout_width="165dp"
                android:layout_height="82dp"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_shop_type4"
                android:layout_width="165dp"
                android:layout_height="110dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_shop_type5"
                android:layout_width="165dp"
                android:layout_height="110dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_shop_type6"
                android:layout_width="165dp"
                android:layout_height="110dp"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/shop_tuangouyouhui" />

            <ImageView
                android:id="@+id/iv_shop_type7"
                android:layout_width="165dp"
                android:layout_height="110dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/shop_xianshiqianggou" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more_type"
        android:layout_width="338dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="7dp"
        android:src="@drawable/taoshop_more"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/taoshop_youzhituijian_icon"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="优质推荐"
        android:textColor="#000"
        android:textSize="14sp" />
</LinearLayout>
