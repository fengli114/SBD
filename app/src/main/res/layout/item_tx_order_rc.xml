<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="326px"
    android:layout_margin="10dp"
    android:background="@drawable/btn_tixian_bg04"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_order_icon"
        android:layout_width="270px"
        android:layout_height="270px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="28px"
        android:scaleType="fitXY"
        android:src="@drawable/picdingdan" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="52px"
        >
      <TextView
          android:id="@+id/tv_order_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="160px"
          android:layout_marginTop="40px"
          android:maxLines="2"
          android:text="【百草味-手剥松子 128gx2 袋】巴西松子-瓜子零食"
          android:textSize="12sp"
          android:textColor="#061623"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:gravity="end|bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3477f5"
                android:gravity="center"
                android:textSize="17sp"
                android:text="返利:"
                />
            <TextView
                android:id="@+id/tv_order_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3477f5"
                android:gravity="center"
                android:textSize="17sp"
                android:text="40元"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>