<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/pay_type_bg"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/pay_type_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_real_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30元"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_give_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送70元"
                android:textColor="#e60013"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_pay_icon"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/zaixainchongzhi_niancu" />
    </RelativeLayout>

</RelativeLayout>