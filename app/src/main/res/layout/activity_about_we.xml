<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />
    <!--标题-->
    <RelativeLayout
        android:id="@+id/title_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_item_height"
        android:layout_below="@id/tou"
        android:background="@color/white">

        <ImageView
            android:id="@+id/order_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/re_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal_16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_recharge"
        android:background="#aaa" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/title_recharge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:adjustViewBounds="true"
        android:padding="2dip"
        android:src="@drawable/newyear" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:text="随便打 1.0"
        android:textColor="#aaa"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rr_score"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/iv_icon"
        android:layout_marginTop="50dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="功能介绍"
            android:textColor="#353535"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/back01"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#E3E3E3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_issue"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/rr_score"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="常见问题"
            android:textColor="#353535"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/back01"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#E3E3E3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr_introduction"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/rr_issue"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="版本更新"
            android:textColor="#353535"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/iv_gengxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/indivicenter_banbengengxin"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/iv_rirhts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/back01"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_banben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:text="1.0.0"
            android:textColor="#999797"
            android:textSize="12sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:background="#E3E3E3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/privates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:text="使用条款和隐私政策"
        android:textColor="#7A93AF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_22"
        android:text="随便打智能科技版权所有"
        android:textColor="#999999"
        android:textSize="12sp" />

