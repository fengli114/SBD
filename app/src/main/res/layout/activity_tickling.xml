<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_item_height">

        <RelativeLayout
            android:id="@+id/al_back"
            android:layout_width="50dp"
            android:layout_height="@dimen/login_item_height"
            android:padding="@dimen/dimen_15dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="@dimen/login_item_height"
                android:src="@mipmap/re_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商务反馈"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal_18sp" />

        <Button
            android:id="@+id/tv_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:background="@color/shang_login"
            android:text="反馈"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dcdcdc" />

    <EditText
        android:id="@+id/et_fankui"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/layer_white_stroke_corner_item_single"
        android:gravity="top|left"
        android:hint="请尽可能详细描述合作内容或问题原因、现象等信息。留下一个您的联系方式或者邮箱。"
        android:padding="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@drawable/customerservive_addbuttuon" />

            <ImageView
                android:id="@+id/iv_ones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:src="@drawable/customerservice_deletbutton" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@drawable/customerservive_addbuttuon" />
            <ImageView
                android:id="@+id/iv_twos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/customerservice_deletbutton" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/dp_5"
                android:scaleType="fitXY"
                android:src="@drawable/customerservive_addbuttuon" />
            <ImageView
                android:id="@+id/iv_threes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/customerservice_deletbutton" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>